{
  "name": "jira-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server for Jira integration",
  "keywords": [
    "jira",
    "mcp",
    "typescript"
  ],
  "license": "MIT",
  "author": "Rahul Dey",
  "bin": {
    "jira-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "bun run lint && bun run format && tsc",
    "type-check": "tsc --noEmit",
    "start": "bun dist/index.js",
    "start:cli": "cross-env NODE_ENV=cli bun dist/index.js",
    "start:http": "bun dist/index.js",
    "dev": "bun run dev:auth-ui & bun run dev:worker & wait",
    "dev:http": "tsx watch src/index.ts",
    "dev:worker": "wrangler dev",
    "dev:auth-ui": "bun run --cwd auth-ui dev",
    "build:auth-ui": "bun run --cwd auth-ui build",
    "deploy:worker": "wrangler deploy",
    "deploy:worker:with-ui": "bun run build:auth-ui && wrangler deploy",
    "deploy:worker:preview:with-ui": "bun run build:auth-ui && wrangler deploy -e preview",
    "auth:generate": "bunx @better-auth/cli generate --config ./src/runtimes/worker/auth/better-auth.cli.ts --output ./src/runtimes/worker/auth/schema.generated.ts --yes",
    "auth:migrate": "bunx @better-auth/cli migrate --config ./src/runtimes/worker/auth/better-auth.cli.ts --yes",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "smoke:worker": "tsx scripts/mcp-smoke-test.ts",
    "lint": "oxlint",
    "format": "oxfmt",
    "inspect": "pnpx @modelcontextprotocol/inspector",
    "prepare": "bun run build && bun -e \"if (process.platform !== 'win32') require('child_process').execSync('chmod +x ./dist/cli.js')\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "better-auth": "^1.3.4",
    "better-auth-cloudflare": "^0.2.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.39.0",
    "express": "^4.21.2",
    "remeda": "^2.20.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.18",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.17.0",
    "drizzle-kit": "^0.31.7",
    "jest": "^29.7.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "wrangler": "^4.65.0"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
